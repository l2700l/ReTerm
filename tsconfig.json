{
    "include": ["src"],
    "exclude": [
        "dist",
        "node_modules"
    ],
    "compilerOptions": {
        "module": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "importHelpers": false,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist/",
        "strict": true,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "moduleResolution": "node",
        "jsx": "react",
        "target": "es5",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    }
}